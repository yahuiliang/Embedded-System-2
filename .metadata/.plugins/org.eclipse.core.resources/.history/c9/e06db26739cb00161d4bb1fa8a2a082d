#include <inttypes.h>
#include "keypad_api.h"
#include "reg_structs.h"

static volatile GPIOx* gpioc = (GPIOx*) 0x40020800;

int main() {
	return 0;
}

void key_init() {
	enable_PC0_to_PC7();
	pull_up_rows();
}

int key_getkey_noblock() {

}

int key_getkey() {
	int num = 0;
	uint8_t set = 1;
	int is_key_pressed = 0;
	for (int col = 0; col < 4 && is_key_pressed; col++) {
		reset_cols();
		gpioc -> BSRR |= set << 16; // change to next column.
		for (int row = 0; row < 4 && is_key_pressed; row++) {
			int row_bit = row + 4;
			uint32_t idr_value = (gpioc -> IDR) >> row_bit;
			is_key_pressed = !(idr_value & 1);
		}
		set <<= 1;
	}
	return num;
}

int key_getchar() {

}

static void enable_PC0_to_PC7() {
	volatile uint32_t* ahb1enr = (uint32_t*) RCC_AHB1ENR;
	*ahb1enr |= 0b11111111;
}

static void pull_up_rows() {
	gpioc -> PUPDR |= 0b01010101 << (Px4 * 2);
}

static void reset_cols() {
	gpioc -> BSRR |= 0b1111 << (Px4 * 2);
}

